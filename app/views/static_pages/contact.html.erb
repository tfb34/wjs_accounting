<%provide(:title, "contact")%>

<div class="header-img" style="background: url('https://s3.us-east-2.amazonaws.com/wjs-accounting-project/images/about-us-pic.jpeg') no-repeat center;background-size:cover">
    <div class="overlay"></div>
    <div class="page-info-tag"><span>Contact Us</span></div>
</div>
<div class="content-box-no-padding">
    <div>
    	<p class="description">Please contact us with any questions. We encourage you to provide any suggestions. Please send any feedback or comments using the optional form on this page. We are eager to hear from you.</p>
    </div>
    <iframe width="100%" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=79%20Dayton%20Street%2C%20Suite%201%2C%20Elizabeth%20NJ%2007202&key=<%=ENV["GOOGLE_MAP_API_KEY"]%>" allowfullscreen></iframe>
    <div id="contact-page-info">
	<h3>Washington J.Sanchez &amp; Associates, LLC</h3>
	<div class="row contact" style="margin-bottom: 0">
		<div class="column-3 contact-info">
			<img src="https://s3.us-east-2.amazonaws.com/wjs-accounting-project/images/location2.png">
			<h4>Address:</h4>
			<p>79 Dayton Street, Suite 1</p>
			<p>Elizabeth, NJ 07202</p>
		</div>
		<div class="column-3 contact-info">
			<img src="https://s3.us-east-2.amazonaws.com/wjs-accounting-project/images/call.png">
			<h4>Telephone:</h4>
			<a href="tel:9084696874">(908)-469-6874</a>
		</div>
		<div class="column-3 contact-info">
			<img src="https://s3.us-east-2.amazonaws.com/wjs-accounting-project/images/fax2.png">
			<h4>Fax:</h4>
			<a href="tel:9084696874">(908)-248-9393</a>
		</div>
		<div class="column-3 contact-info">
			<img src="https://s3.us-east-2.amazonaws.com/wjs-accounting-project/images/email2.png">
			<h4>Email:</h4>
			<a href="mailto:contact@jscpagrowth.com">contact@jscpagrowth.com</a>
		</div>
	</div>
	<div id="form">
		<form method=post action="https://p10.secure.webhosting.luminate.com/forms?ssc=us1&login=elisabethb_cpatrust">
			<h3>Contact Form</h3>
			<font face="sans-serif" >

			<b>First Name:</b>
			
			<input class="form-input" type="text" name="firstName" placeholder="John" required>
			
			<b>Last Name:</b><br>
			<input class="form-input" type="text" name="lastName" placeholder="Doe" size="27" required>
			
			<b>Email</b><br>
			
			<input class="form-input" type="email" name="email" placeholder="youremail@example.com" size="27" required>
			
			<b>Phone</b><br>
			
			<input type="tel" class="form-input" placeholder="Phone Number" name="phone" required>
			
			<b>Company:</b><br>
			
			<input class="form-input" type="text" name="company" size="27">
			
			<b>Please add any comments you have below:</b>
			
			</font>
			<textarea class="form-text-input" cols="40" rows="10" placeholder="Leave a comment..." name="Comments" required></textarea>
			<br>
			<input class="form-btn send" type="submit" value="Send">
			<input class="reset" type="reset" value="Reset" >
		</form>
	</div>
</div>
</div>



